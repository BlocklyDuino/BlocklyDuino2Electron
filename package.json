{
    "name": "BlocklyDuino",
    "version": "0.3.0",
    "description": "BlocklyDuino is a web-based visual programming editor for [Arduino](http://www.arduino.cc/)",
    "license": "GPL-3.0",
    "author": "Sebastien Canet <scanet@libreduc.cc>",
    "main": "main.js",
    "keywords": [
        "blockly",
        "BLOCKLY",
        "arduino",
        "ARDUINO",
        "blocklyduinoreboot",
        "blocklyduino2",
        "BlocklyDuinoElectron",
        "BlocklyDuino2Electron",
        "blocks",
        "scratch",
        "electron",
        "ELECTRON",
        "serialport",
        "SERIALPORT",
        "electron-builder"
    ],
    "build": {
        "asar": true,
        "appId": "com.electron.BlocklyDuino2",
        "directories": {
            "buildResources": "./src",
            "output": "./dist"
        },
        "productName": "BlocklyDuino2",
        "win": {
            "target": [
                "portable",
                "zip"
            ],
            "icon": "src/appIcon.png"
        },
        "nsis": {
            "installerIcon": "src/install.ico",
            "uninstallerIcon": "src/icon.ico",
            "oneClick": false,
            "perMachine": true,
            "deleteAppDataOnUninstall": true,
            "allowToChangeInstallationDirectory": true,
            "runAfterFinish": true
        },
        "fileAssociations": {
            "ext": "bduino",
            "name": "BlocklyDuino File",
            "role": "Editor",
            "icon": "src/icon.ico"
        },
        "extraFiles": [
            "compiler",
            "sketchbook",
            "www",
            "README.md",
            "LICENSE.md",
            "config.json"
        ],
        "publish": [
            {
                "provider": "github",
                "repo": "BlocklyDuino/BlocklyDuino2Electron",
                "owner": "SebCanet",
                "releaseType": "release"
            }
        ]
    },
    "scripts": {
        "postinstall": "electron-builder install-app-deps",
        "start": "electron .",
        "compiler": "electron-builder --win --ia32",
        "prepare": "electron-build-env npm rebuild"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/BlocklyDuino/BlocklyDuino2Electron"
    },
    "bugs": {
        "url": "https://github.com/BlocklyDuino/BlocklyDuinoElectron/issues"
    },
    "devDependencies": {
        "electron": "^8.3.0",
        "electron-builder": "^22.6.1"
    },
    "dependencies": {
        "child_process": "^1.0.2",
        "electron-build-env": "^0.2.0",
        "electron-updater": "^4.3.1",
        "fs-extra": "^9.0.0",
        "npm-check-updates": "^6.0.1",
        "serialport": "^9.0.0",
        "tableify": "^1.1.0"
    }
}
